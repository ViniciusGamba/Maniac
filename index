<script>
    contador = 0
    function Trocar_cor()
    {
        minha_div.style.backgroundColor = "green"// troca a cor apertando encima da imagem
        minha_div.style.borderStyle = "solid"//tipo de borda 
        minha_div.style.borderColor = "red"// a cor da borda
        contador = contador + 1
        minha_div.innerHTML = contador 
    }
</script>
